{
  "name": "zafiro-stock-y-ventas",
  "private": true,
  "version": "1.0.1",
  "description": "Sistema de gesti√≥n de stock y ventas para Zafiro",
  "author": {
    "name": "Pablo Manchon Richardi",
    "email": "pablomanchon97@gmail.com"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "vite --host",
    "build:nest": "nest build",
    "start:dev": "nest start --watch --host 0.0.0.0",
    "dev:all": "concurrently \"npm run start:nest:watch\" \"npm run dev\" \"npm run electron\"",
    "electron": "npm run electron:build && electron ./dist/electron.cjs.js",
    "electron:build": "tsc -b",
    "build": "vite build",
    "build:all": "npm run build:nest && npm run electron:build && npm run build",
    "dist:win": "electron-builder -w nsis",
    "dist:msi": "electron-builder -w msi",
    "dist:all": "electron-builder -w",
    "dist:portable": "electron-builder -w portable",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/typeorm": "^11.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/express": "4.17.21",
    "axios": "^1.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "4.21.2",
    "express-rate-limit": "6.11.2",
    "lucide-react": "^0.525.0",
    "mssql": "^11.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.18",
    "@types/electron": "1.6.12",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.15.6",
    "@types/react": "18.2.41",
    "@types/react-dom": "18.2.17",
    "@types/reflect-metadata": "^0.0.5",
    "@vitejs/plugin-react": "4.4.0",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "electron": "28.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.3.4",
    "globals": "13.21.0",
    "jest": "^30.0.3",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "5.2.8",
    "wait-on": "7.0.1"
  },
  "main": "dist/electron.cjs.js",
  "build": {
    "appId": "com.zafiro.stockyventas",
    "productName": "Zafiro - Stock y Ventas",
    "files": [
      "dist/**",
      "dist-renderer/**",
      "public/**",
      "node_modules/**",
      "package.json",
      "!**/*.map",
      "!node_modules/.cache/**"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/zafiro_rounded.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zafiro"
    }
  }
}
